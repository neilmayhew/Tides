    main-is: TestTides.hs
    other-modules: Analysis Harmonics TCDExtra Tides Time
    build-depends:
        base >=4.6.0.1 && <5,
        directory >=1.2.0.1 && <1.4,
        filepath >=1.3.0.1 && <1.6,
        infinite-list >=0.1 && <0.2,
        time >=1.5 && <1.15,
        tz >=0.0.0.5 && <0.2,
        process >=1.2.3 && <1.7,
        random >=1.1 && <1.3,
        QuickCheck >=2.8 && <2.15,
        Tides,
    extra-libraries:
