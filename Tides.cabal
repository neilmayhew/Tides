    main-is: SummarizeTCD.hs
    build-depends:
        base >=4.6.0.1 && <5,
        containers >=0.5.0.0 && <0.8,
        Tides,
    extra-libraries:
        tcd
    default-language: Haskell2010
    ghc-options:
       -Wall
       -Wcompat
       -Wunused-packages
       -Werror

executable SearchTCDs
    main-is: SearchTCDs.hs
    other-modules: TCDExtra
    build-depends:
        base >=4.6.0.1 && <5,
        directory >=1.2.0.1 && <1.4,
        filepath >=1.3.0.1 && <1.6,
