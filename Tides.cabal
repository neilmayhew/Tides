cabal-version: 3.8
name: Tides
version: 0.1.0.0
build-type: Simple
license: MIT
license-file: LICENSE
copyright: 2014-2025 Neil Mayhew <neil_mayhew@users.sourceforge.net>
maintainer: neil_mayhew@users.sourceforge.net
synopsis: A program for exploring tidal prediction data
description:
    Uses the Tide Component Database library (libtcd)
author: Neil Mayhew

library
    exposed-modules:
        TCD
        TCDExtra
    build-depends:
        base >=4.6.0.1 && <5,
        directory >=1.2.0.1 && <1.4,
        filepath >=1.3.0.1 && <1.6
    c-sources:
        TCDAux.c
        TCDAux.h
    extra-libraries:
        tcd
    default-language: Haskell2010
    ghc-options:
       -Wall
       -Wcompat
       -Wunused-packages
       -Werror

executable Tides
    main-is: TidesMain.hs
    other-modules:
        System.IO.Fake
        Analysis
        Harmonics
        TCDExtra
        Tides
        Time
    build-depends:
        base >=4.6.0.1 && <5,
        directory >=1.2.0.1 && <1.4,
        filepath >=1.3.0.1 && <1.6,
        infinite-list >=0.1 && <0.2,
        mtl >=2.2.2 && <2.4,
        time >=1.5 && <1.15,
        time-locale-compat >=0.1.1.3 && <0.2,
        tz >=0.0.0.5 && <0.2,
        random >=1.1 && <1.3,
        Tides,
    extra-libraries:
        tcd
    default-language: Haskell2010
    ghc-options:
       -Wall
       -Wcompat
       -Wunused-packages
       -Werror

executable Extremes
    main-is: Extremes.hs
    other-modules: Analysis Harmonics TCDExtra Tides Time
    build-depends:
        base >=4.6.0.1 && <5,
        directory >=1.2.0.1 && <1.4,
        filepath >=1.3.0.1 && <1.6,
        infinite-list >=0.1 && <0.2,
        time >=1.5 && <1.15,
        time-locale-compat >=0.1.1.3 && <0.2,
        tz >=0.0.0.5 && <0.2,
        random >=1.1 && <1.3,
        Tides,
    extra-libraries:
        tcd
    default-language: Haskell2010
    ghc-options:
       -Wall
       -Wcompat
       -Wunused-packages
       -Werror

