    type: exitcode-stdio-1.0
    main-is: TestRegressions.hs
    other-modules:
        System.IO.Fake
        Analysis
        Harmonics
        TCDExtra
        TestTCD
        TideAmplitudes
        TideConstituents
        Tides
        TidesMain
        Time
    build-depends:
        base >=4.6.0.1 && <5,
        directory >=1.2.0.1 && <1.4,
        filepath >=1.3.0.1 && <1.6,
        hspec >=2.7.6,
        hspec-golden >=0.1.0.3,
        infinite-list >=0.1 && <0.2,
        mtl >=2.2.2 && <2.4,
        random >=1.1 && <1.3,
        time >=1.5 && <1.15,
        time-locale-compat >=0.1.1.3 && <0.2,
        tz >=0.0.0.5 && <0.2,
